{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "paths": {
            "@infrastructure/*": ["./src/infrastructure/*"],
            "@services/*": ["./src/services/*"],
            "@controllers/*": ["./src/controllers/*"],
            "@config": ["./src/config.js"]
        }
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}
